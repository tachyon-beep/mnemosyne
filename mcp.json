{
  "name": "mcp-persistence",
  "version": "1.0.0",
  "description": "MCP Persistence Server - Conversation history and knowledge management for Claude",
  "command": "node",
  "args": ["dist/index.js"],
  "env": {
    "NODE_ENV": "production",
    "LOG_LEVEL": "info",
    "ENABLE_EMBEDDINGS": "true",
    "EMBEDDING_MODEL": "Xenova/all-MiniLM-L6-v2"
  },
  "mcpServers": {
    "mcp-persistence": {
      "command": "node",
      "args": ["dist/index.js"],
      "env": {
        "NODE_ENV": "production",
        "LOG_LEVEL": "info",
        "ENABLE_EMBEDDINGS": "true",
        "EMBEDDING_MODEL": "Xenova/all-MiniLM-L6-v2",
        "DB_PATH": "./.mcp/conversations.db",
        "EMBEDDING_CACHE_DIR": "./.mcp/.cache/embeddings"
      }
    }
  }
}