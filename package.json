{
  "name": "mcp-persistence-server",
  "version": "1.0.0",
  "description": "Production-ready MCP persistence server with conversation history, advanced search, and knowledge graph capabilities for Claude Desktop",
  "main": "dist/index.js",
  "bin": {
    "mcp-persistence-server": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:enhanced-search": "jest tests/unit/search/EnhancedSearchEngine.test.ts tests/unit/tools/SemanticSearchTool.test.ts tests/unit/tools/HybridSearchTool.test.ts",
    "test:integration": "jest tests/integration/enhanced-search-integration.test.ts",
    "test:performance": "jest tests/performance/search-performance.test.ts --runInBand",
    "test:stress": "jest tests/stress/search-stress.test.ts --runInBand",
    "test:all-search": "jest tests/unit/search tests/unit/tools tests/integration/enhanced-search-integration.test.ts --runInBand",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "init:models": "tsx src/scripts/init-models.ts",
    "benchmark": "tsx src/scripts/benchmark-embeddings.ts",
    "benchmark:performance": "tsx src/scripts/performance-benchmark.ts",
    "benchmark:full": "npm run benchmark && npm run benchmark:performance",
    "validate:production": "tsx scripts/pre-production-validation.ts",
    "test:mcp-compliance": "jest tests/integration/mcp-protocol-compliance.test.ts",
    "test:production-scale": "jest tests/integration/production-scale-validation.test.ts",
    "test:resilience": "jest tests/integration/resilience-recovery.test.ts",
    "test:ci": "jest tests/automation/ci-cd-integration.test.ts",
    "test:pre-release": "npm run test:mcp-compliance && npm run test:resilience && npm run test:ci",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "health-check": "node dist/index.js --health-check",
    "validate-triggers": "tsx src/cli/validate-triggers.ts",
    "validate-triggers:test": "tsx src/cli/validate-triggers.ts --test --verbose",
    "validate-triggers:report": "tsx src/cli/validate-triggers.ts --report --verbose",
    "validate-triggers:cleanup": "tsx src/cli/validate-triggers.ts --cleanup --verbose"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "claude-desktop",
    "persistence",
    "conversation-history",
    "sqlite",
    "semantic-search",
    "knowledge-graph",
    "embeddings",
    "full-text-search",
    "fts5",
    "ai-assistant",
    "context-management",
    "privacy-first",
    "analytics",
    "productivity-tracking",
    "decision-tracking",
    "local-ai",
    "transformers"
  ],
  "author": "MCP Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcp-community/mcp-persistence-server.git"
  },
  "bugs": {
    "url": "https://github.com/mcp-community/mcp-persistence-server/issues"
  },
  "homepage": "https://github.com/mcp-community/mcp-persistence-server#readme",
  "dependencies": {
    "@huggingface/transformers": "^3.7.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "better-sqlite3": "^11.0.0",
    "uuid": "^11.1.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@types/better-sqlite3": "^7.6.10",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "babel-jest": "^30.0.5",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.4",
    "tsx": "^4.15.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/**/*",
    "migrations/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
