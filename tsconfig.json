{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "coverage", 
    "tests",
    "src/analytics/**/*",
    "src/services/nlp/EnhancedPatternDetector.ts",
    "src/services/nlp/PatternAccuracyValidator.ts",
    "src/services/nlp/PatternDetectionManager.ts",
    "src/services/nlp/ProductionPatternDetector.ts",
    "src/storage/ConnectionPool.ts",
    "src/entities/ConflictResolutionEngine.ts",
    "src/entities/DataValidationService.ts",
    "src/entities/DataIntegrityManager.ts",
    "src/monitoring/**/*",
    "src/scripts/start-with-monitoring.ts"
  ]
}